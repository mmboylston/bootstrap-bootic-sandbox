<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="{{ shop.description }}">
    <meta name="author" content="Bootic">
    <title>{% if resource %}{{ resource.title }}{% endif %}{% if product %}{{ product.title }}{% endif %}{% if template == 'home' %}{{ shop.description }}{% endif %} - {{ shop.name }}</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'>
    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'master.css' | asset_url | stylesheet_tag }}
    {% bootic_header %}
    {{ 'main.css' | asset_url | stylesheet_tag }}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body id="bootstrap-bootic" class="{{ template }}_page">
    <div class="container">
      <div class="masthead">
       <h1 class="muted hidden-xs">
          <a href="/">
            {{ shop.name }}
          </a>
       </h1>
        
        <!-- Static navbar -->
          <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand visible-xs" href="/">{{ shop.name }}</a>
              </div>
              <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  {% for link in menus.main.links %}
                  <li class="{{ 'active' | print_if_equal: resource, link }}"><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
                  <!--<li><a href="#">About</a></li>
                  <li><a href="#">Contact</a></li> -->
                  <!-- <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Action</a></li>
                      <li><a href="#">Another action</a></li>
                      <li><a href="#">Something else here</a></li>
                      <li class="divider"></li>
                      <li class="dropdown-header">Nav header</li>
                      <li><a href="#">Separated link</a></li>
                      <li><a href="#">One more separated link</a></li>
                    </ul>
                  </li> -->
                </ul>
                <ul class="nav navbar-nav navbar-right">
                
                <li class="bootic-cart-count">
                  <a href="#cart-modal" data-toggle="modal" data-target="#cart-modal">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    <span class="badge badge-info count">0</span>
                    <span class="total">0</span>
                  </a>
                </li><!-- cart count -->
                </ul>
              </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
          </nav>
       <!-- /main menu -->
      </div>
      
      {% if template == 'home' %}
        {{ content_for_layout }}
      {% else %}
        <div class="row">
          <div class="col-md-9">
            {{ content_for_layout }}  
          </div><!-- /main content -->
          <div class="col-md-3">
            {% include 'sidebar' %}
          </div><!-- /sidebars -->
        </div>
      {% endif %}

      <hr>

      <div class="footer">
        <p>{{pages.footer.body }}</p>
      </div>

    </div> <!-- /container -->
    
    {% include 'cart_modal' %}
    
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% bootic_footer %}
    {{ 'http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' | javascript_tag }}
    {{ 'http://js.bootic.net/cart/0.0/bootic_cart.min.js' | javascript_tag }}
    <!-- Bootstrap JS -->
    {{ 'bootstrap.min.js' | asset_url | javascript_tag }}
    <!-- Images Loaded  -->
    {{ ' imagesloaded.pkgd.min.js' | asset_url | javascript_tag }}
    <!-- Masonry  -->
    {{ 'masonry.pkgd.min.js' | asset_url | javascript_tag }}
    <!-- Plugins de JS -->
    {{ 'plugins.js' | asset_url | javascript_tag }}
    <!-- JavaScript principal de esta tienda -->
    {{ 'app.js' | asset_url | javascript_tag }}
    <!-- Scripts para la tienda  -->
    {{ 'main.js' | asset_url | javascript_tag }}
  </body>
</html>
